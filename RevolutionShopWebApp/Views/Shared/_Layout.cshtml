<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" asp-href-include="~/css/MainStyle/LayoutStyleSheet.css" asp-append-version="true"/>
        <script type="text/javascript" src="https://yastatic.net/jquery/2.1.3/jquery.min.js"></script>
        <title>@ViewBag.Title</title>
    </head>
    <body>
        <header>
            <div class="menu-container">
                <div class="menu-center">
                    <div class="menu-sections">
                        <div class="menu-item">
                            <p>logo</p>
                        </div>
                        <div class="menu-item">
                            <a id="fullscreen-menu-link" class="full-menu" href="#">menu</a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div id="fullscreen-menu-modal" class="fullscreen-menu-background">
            <div class="fullscreen-menu-content">
                <span class="close-fullscreen-menu"></span>
                <div>
                    <ul>
                        <li>
                            <a href='@Url.Action("Index", "Home")'>Главная</a>
                        </li>
                        <li>
                            <a href="~/Home/Index/#sections">Магазин</a>
                        </li>
                        <li>
                            <a href='@Url.Action("LookBook", "Home")'>Лукбук</a>
                        </li>
                        <li>
                            <a href='@Url.Action("ProductPage", "Shop")'>Sale</a>
                        </li>
                        <li>
                            <a href='@Url.Action("DeliveryAndPayment", "Home")'>Доставка и оплата</a>
                        </li>
                        <li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href='@Url.Action("AccountPage", "Account")'>Личный кабинет(в системе)</a>
                        }
                        else
                        {
                            <a href='@Url.Action("AuthorizationPage", "Account")'>Личный кабинет(не в системе)</a>
                        }
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a href='@Url.Action("Index", "Cart")'>Корзина()</a>
                            </li>
                        }
                        <li>
                            <a href='@Url.Action("Contact", "Home")'>Контакты?</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div>
            @RenderBody()
        </div>

        <footer class="footer-holder">
        @if (IsSectionDefined("Footer"))
        {
            @RenderSection("Footer")
        }
        else
        {
            <div class="container">
                <div class="center">
                    <a href="layout.html">
                        <img src="https://fun-cats.ru/wp-content/uploads/2/c/0/2c0fd406c831a6b91ab19cfec0fcde91.jpeg" style="max-height: 50px">
                    </a>
                    <div class="footer-menu">
                        <div>
                            <ul>
                                <li>
                                    <a href='@Url.Action("Index", "Home")'>About</a>
                                </li>
                                <li>
                                    <a href='@Url.Action("Contact", "Home")'>Contact</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="footer-copyright">
                        <p>Copyright © 2022 - All Rights Reserved</p>
                    </div>
                </div>
            </div>
        }
        </footer>

        <script asp-src-include="~/js/**/*.js"></script>
    </body>
</html>