@using RevolutionData.Models.Entities
@model Product
@{
	ViewBag.Title = "Футболка";
}

<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" asp-href-include="~/css/ShopStyle/ProductDetailPageStyleSheet.css" asp-append-version="true"/>
	</head>
	<body>
		<div class="container">
			<div class="center">
				<div class="item-image">

				</div>
				<div class="item-info">
					<h1>Футболка @Model.Name</h1>
					<div class="price">
					@if (Model.Discount > 0)
					{
						<p class="price-meaning">@((Model.Price / 100) * (100 - Model.Discount)) руб.</p>
						<p><s>@Model.Price руб.</s> Скидка @Model.Discount%</p>
					}
					else
					{
						<p class="price-meaning">@Model.Price руб.</p>
					}
					</div>
					<div class="size">
						<p><b>Размер</b></p>
						<p><input name="size" type="radio"/>S</p>
						<p><input name="size" type="radio"/>M</p>
						<p><input name="size" type="radio"/>L</p>
						<p><input name="size" type="radio"/>XL</p>
					</div>
					<div class="availability">
					@if(Model.Count > 0)
					{
						<p><b>В наличии @Model.Count</b></p>
						<button onclick="location.href='@Url.Action("AddToCart", "Cart", new { id = Model.Id })'">В корзину</button>
					}
					else
					{
						<p><b>Нет в наличии</b></p>
						<button onclick="location.href='@Url.Action("AddToCart", "Cart", new { id = Model.Id })'">В корзину</button>
					}
					</div>
					<div class="info">
						<p><b>Информация о товаре</b></p>
						<p>@Model.Description</p>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
