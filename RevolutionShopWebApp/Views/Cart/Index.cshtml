@using RevolutionData.Models.Entities
@model List<CartItem>
@{
    ViewBag.Title = "Корзина";
}

<!DOCTYPE html>
<html>
	<body>
    @if(Model != null && Model.Count != 0)
    {
        <div>
            <h1>Корзина</h1>
            @for(var i = 0; i < Model.Count; i++)
            {
                <div>
                    <p>Футболка @Model[i].Product.Name</p>
                    <p>Цена @Model[i].Product.Price</p>
                    <p>Количество @Model[i].Quantity</p>
                    <button onclick="location.href='@Url.Action("RemoveItem", "Cart", new { id = Model[i].Product.Id })'">X</button>
                </div>
            }
        </div>
        <div>
            <h1>Оформление заказа</h1>
            <button >Оформить заказ</button>
        </div>
    }
    else
    {
        <p>Корзина пуста</p>
    }
	</body>
</html>